@model IEnumerable<UserManagement.Services.Domain.Models.UserModel>

@{
    ViewData["Title"] = "User List";
}

<partial name="_StatusMessage" />

<h2>User List</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Forename)</th>
                <th>@Html.DisplayNameFor(m => m.Surname)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.DateOfBirth
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="btnToggleActions">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="btnToggleActions">
                                <li><a class="dropdown-item" asp-action="View" asp-route-id="@item.Id">View</a></li>
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                <li><a class="dropdown-item" asp-controller="Log" asp-action="List" asp-route-userId="@item.Id">View Log History</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <div class="btn-group" role="group">
        <a asp-controller="User" asp-action="List" class="btn btn-default">Show All</a>
        <a asp-controller="User" asp-action="List" asp-route-active="true" class="btn btn-default">Active Only</a>
        <a asp-controller="User" asp-action="List" asp-route-active="false" class="btn btn-default">Non Active</a>
    </div>

    <a a class="dropdown-item btn btn-primary float-end" asp-action="Add">
        Add User
    </a>
</div>
