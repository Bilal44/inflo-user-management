@model IEnumerable<UserManagement.Services.Domain.Models.UserModel>

@{
    ViewData["Title"] = "User List";
    var activeParam = Context.Request.Query["active"].ToString();
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <partial name="_StatusMessage"/>

            <h2 class="text-center mb-4">User List</h2>

            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
                <div class="btn-group" role="group">
                    <a asp-action="List"
                       class="btn @(string.IsNullOrEmpty(activeParam) ? "btn-dark" : "btn-outline-dark")">
                        Show All
                    </a>
                    <a asp-action="List" asp-route-active="true"
                       class="btn @(activeParam == "true" ? "btn-primary" : "btn-outline-primary")">
                        Active Only
                    </a>
                    <a asp-action="List" asp-route-active="false"
                       class="btn @(activeParam == "false" ? "btn-warning" : "btn-outline-warning")">
                        Non Active
                    </a>
                </div>

                <a asp-action="Add" class="btn btn-success">Add User</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Forename)</th>
                        <th>@Html.DisplayNameFor(m => m.Surname)</th>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <th>@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                        <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                        <th class="text-center"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Forename</td>
                            <td>@item.Surname</td>
                            <td>@item.Email</td>
                            <td>@item.DateOfBirth</td>
                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td class="text-center">
                                <div class="d-inline-block position-relative">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Actions
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-action="View" asp-route-id="@item.Id">View</a></li>
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                        <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                        <li><a class="dropdown-item" asp-controller="Log" asp-action="List" asp-route-userId="@item.Id">View Log History</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
